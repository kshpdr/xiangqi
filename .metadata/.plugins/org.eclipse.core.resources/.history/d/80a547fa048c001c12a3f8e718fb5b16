package de.tuberlin.sese.swtpp.gameserver.model.xiangqi;

import java.util.Arrays;

public class Position {
	private int row;
	private int column;
	
	public Position(int row, int column) {
		this.row = row;
		this.column = column;
	}
	
	public int getRow() {
		return row;
	}
	
	public int getColumn() {
		return column;
	}
	
	public void setRow(int row) {
		this.row = row;
	}
	
	public void setColumn(int column) {
		this.column = column;
	}
	
	public static Position stringToPosition(String positionString) {
		int row = positionString.charAt(1) - '0';
		int column = positionString.charAt(0) - 97;
		return new Position(row, column);
	}
	
	public static String positionToString(Position position) {
		String positionString = "";
		positionString += (char)position.getColumn() + 97;
		positionString += position.getRow() + '0';
		return positionString;
	}
	
	public static void main(String[] args) {
		System.out.print(positionToString(new Position(0, 0)));
	}

}