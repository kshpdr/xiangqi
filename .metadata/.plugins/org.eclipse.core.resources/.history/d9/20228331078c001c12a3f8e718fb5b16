package de.tuberlin.sese.swtpp.gameserver.model.xiangqi;

import java.util.ArrayList;

import de.tuberlin.sese.swtpp.gameserver.model.Move;

public class Rook implements Figur {

	@Override
	public ArrayList<Move> getPossibleMoves(Position position, char[][] boardMatrix, Player player) {
		// TODO get moves: check 4 dimensions
		// right horizontal
		ArrayList<Move> possibleMoves = new ArrayList<Move>();
		for (int i = position.getColumn(); i < boardMatrix.length; i++) {
			String move = Position.positionToString(position);
			move += '-';
			if (boardMatrix[position.getRow()][i] == 0) {
				Position target = new Position(position.getRow(), i);
				move += Position.positionToString(target);
				possibleMoves.add(new Move(move, ))
			}
		}
	}

}
